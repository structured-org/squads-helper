{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node"],
    "module": "commonjs",
    "lib": ["esnext", "DOM"],
    "outDir": "lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@actions/*": ["./src/actions/*"],
      "@lib/*": ["./src/lib/*"],
      "@idl/*": ["./idl/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules"]
}
